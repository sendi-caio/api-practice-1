      },
      "post": {
        "tags": [
          "posts"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "$ref": "#/components/requestBodies/post"
        },
        "responses": {
          "201": {
            "description": "posts created"
          }
        }
      }
    },
    "/posts/{id}": {
      "parameters": [
