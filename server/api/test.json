{
  "openapi": "3.0.2",
  "info": {
    "title": "Talent Dig React",
    "version": "1.0",
    "description": "learn API"
  },
  "servers": [
    {
      "url": "http://127.0.0.1:3000/v1"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "parameters": {
      "id": {
        "name": "id",
        "in": "path",
        "required": true,
        "schema": {
          "$ref": "#/components/schemas/id"
        }
      }
    },
    "headers": {},
    "examples": {},
    "links": {},
    "requestBodies": {
      "user": {
        "required": true,
        "content": {
          "multipart/form-data": {
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "$ref": "#/components/schemas/name"
                },
                "email": {
                  "$ref": "#/components/schemas/email"
                },
                "avatar": {
                  "$ref": "#/components/schemas/avatar"
                }
              }
            }
          }
        }
      },
      "auth": {
        "required": true,
        "content": {
          "application/x-www-form-urlencoded": {
            "schema": {
              "$ref": "#/components/schemas/auth"
            }
          },
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/auth"
            }
          }
        }
      },
      "post": {
        "required": true,
        "content": {
          "application/x-www-form-urlencoded": {
            "schema": {
              "$ref": "#/components/schemas/post"
            }
          },
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/post"
            }
          }
        }
      }
    },
    "schemas": {
      "email": {
        "type": "string",
        "format": "email"
      },
      "id": {
        "type": "string",
        "format": "number"
      },
      "password": {
        "type": "string",
        "minimum": 4,
        "maximum": 8
      },
      "title": {
        "type": "string"
      },
      "name": {
        "type": "string"
      },
      "avatar": {
        "type": "string",
        "format": "binary"
      },
      "post": {
        "type": "object",
        "properties": {
          "title": {
            "$ref": "#/components/schemas/title"
          },
          "author": {
            "$ref": "#/components/schemas/name"
          }
        }
      },
      "auth": {
        "type": "object",
        "properties": {
          "email": {
            "$ref": "#/components/schemas/email"
          },
          "password": {
            "$ref": "#/components/schemas/password"
          }
        }
      }
    }
  },
  "tags": [],
  "paths": {
