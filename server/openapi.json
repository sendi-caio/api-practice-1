{
  "openapi": "3.0.2",
  "info": {
    "title": "Talent Dig React",
    "version": "1.0",
    "description": "learn API"
  },
  "servers": [
    {
      "url": "http://localhost:3000/v1"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Email": {
        "type": "string",
        "format": "email"
      },
      "Task": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "list": {
            "type": "array",
            "items": {
              "type": "object",
              "$ref": "#/components/schemas/TaskList"
            }
          }
        }
      },
      "TaskList": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "done": {
            "type": "boolean"
          }
        }
      },
      "Password": {
        "type": "string",
        "minimum": 4,
        "maximum": 8
      },
      "Post": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "author": {
            "type": "string"
          }
        }
      },
      "Login": {
        "type": "object",
        "properties": {
          "email": {
            "$ref": "#/components/schemas/Email"
          },
          "password": {
            "$ref": "#/components/schemas/Password"
          }
        }
      },
      "Register": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "$ref": "#/components/schemas/Password"
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "posts",
      "description": "posts"
    },
    {
      "name": "comments",
      "description": "comments"
    },
    {
      "name": "register",
      "description": "register"
    },
    {
      "name": "login",
      "description": "login"
    }
  ],
  "paths": {
    "/task": {
      "get": {
        "tags": [
          "task"
        ],
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    },
    "/task-list": {
      "get": {
        "tags": [
          "task"
        ],
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    },
    "/posts": {
      "get": {
        "tags": [
          "posts"
        ],
        "description": "get posts",
        "responses": {
          "default": {
            "description": ""
          }
        }
      },
      "post": {
        "tags": [
          "posts"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "$ref": "#/components/schemas/Post"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "posts created"
          }
        }
      }
    },
    "/posts/{postId}/comments": {
      "get": {
        "tags": [
          "comments"
        ],
        "description": "get comments",
        "responses": {
          "default": {
            "description": ""
          }
        },
        "parameters": [
          {
            "name": "postId",
            "required": true,
            "in": "path",
            "schema": {
              "type": "string",
              "format": "number"
            }
          }
        ]
      }
    },
    "/register": {
      "post": {
        "tags": [
          "register"
        ],
        "description": "Registrasi User Baru",
        "requestBody": {
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "$ref": "#/components/schemas/Register"
              }
            },
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Register"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "registrasi user sukses"
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": [
          "login"
        ],
        "description": "Registrasi User Baru",
        "requestBody": {
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "$ref": "#/components/schemas/Login"
              }
            },
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Login"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "registrasi user sukses"
          }
        }
      }
    }
  }
}